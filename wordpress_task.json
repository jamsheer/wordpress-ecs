[
  {
    "environment": [{
      "name": "WORDPRESS_DB_USER",
      "value": "${rds_username}"
    },
    {
      "name": "WORDPRESS_DB_PASSWORD",
      "value": "${rds_password}"
    },
    {
      "name": "WORDPRESS_DB_NAME",
      "value": "${rds_db_name}"
    },
    {
      "name": "WORDPRESS_DB_HOST",
      "value": "${rds_db_host}"
    }
    ],
    "memory": 800,
    "cpu": 1024,
    "image": "jamsheer/wordpress:latest",
    "name": "wordpress",
    "mountPoints": [
      {
        "ContainerPath": "/var/www/html/",
        "SourceVolume": "nfs-storage"
      }
    ],
    "portMappings": [
      {
        "hostPort": 80,
        "containerPort": 80,
        "protocol": "tcp"
      }
    ]
  }
]
